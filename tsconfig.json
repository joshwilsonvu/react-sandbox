{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es5",
    "module": "es6",
    "strict": true,
    "allowJs": true,
    "noImplicitThis": true,
    "removeComments": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "lib": ["dom","es2016"]
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "types": ["node"],
  "compileOnSave": true
}